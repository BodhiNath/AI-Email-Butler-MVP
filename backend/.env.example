# OpenAI API Configuration
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# (Optional) Custom OpenAI base URL for alternative providers
# OPENAI_API_BASE=https://api.openai.com/v1

# JWT Secret Key for token verification
# Generate a strong secret in production: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET=your-jwt-secret-key-here-change-in-production

# (Optional) API Key header name for custom authentication
# API_KEY_HEADER=X-API-Key

# AI Provider Selection (openai or claude)
AI_PROVIDER=openai

# Claude API Configuration (only required if AI_PROVIDER=claude)
CLAUDE_API_KEY=your_claude_api_key_here
CLAUDE_MODEL=claude-sonnet-4.5
